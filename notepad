	if a.Sag.Sol != nil && a.Sag.YukseklikHesapla() > 1 {
		if a.Sag.Sag == nil {
			a.SagDondurmeCift()
			a.SagDondurme()
			return
		}

		solYukseklik := a.Sag.Sol.YukseklikHesapla()
		sagYukseklik := a.Sag.Sag.YukseklikHesapla()
		fmt.Printf("sol yüksekliği %d\n", solYukseklik)
		fmt.Printf("sag yüksekliği %d\n", sagYukseklik)
		if math.Abs(float64(solYukseklik-sagYukseklik)) > 1 {
			a.SagDondurmeCift()
			a.SagDondurme()

		}

	} else if a.Sol.Sag != nil && a.Sol.YukseklikHesapla() > 1 {

		if a.Sol.Sol == nil {
			a.SolaDondurmeCift()
			a.SolaDondurme()
			return
		}

		solYukseklik := a.Sol.Sol.YukseklikHesapla()
		sagYukseklik := a.Sol.Sag.YukseklikHesapla()
		fmt.Printf("sol yüksekliği %d\n", solYukseklik)
		fmt.Printf("sag yüksekliği %d\n", sagYukseklik)
		if math.Abs(float64(solYukseklik-sagYukseklik)) > 1 {
			a.SolaDondurmeCift()
			a.SolaDondurme()
		}

	}